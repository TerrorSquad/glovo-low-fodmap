{
  "manifest_version": 3,
  "name": "Glovo Low-FODMAP Helper",
  "version": "0.1.0",
  "description": "Ističe Low-FODMAP proizvode i omogućava sakrivanje ostalih na Glovo prodavnicama.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://glovoapp.com/*",
    "https://glovo-fodmap-api.fly.dev/*"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://glovoapp.com/*"
      ],
      "js": [
        "src/content.ts"
      ]
    },
    {
      "matches": [
        "https://glovoapp.com/*"
      ],
      "js": [
        "src/injector.ts"
      ],
      "world": "MAIN"
    }
  ],
  "commands": {
    "toggle-hide-products": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "MacCtrl+Shift+H"
      },
      "description": "Sakrij/Prikaži Non-Low-FODMAP proizvode"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
